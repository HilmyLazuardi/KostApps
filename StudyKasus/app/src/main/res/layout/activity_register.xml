<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.hilmylazuardi.studykasus.Register">

    <ImageView
        android:id="@+id/logo_regis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/home"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KOST APPS"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo_regis"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!--masukkan nama lengkap-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/nm_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_regis">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_nama"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <!--masukkan alamat-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/al_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nm_regis">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_alamat"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:hint="Alamat"
            android:inputType="text"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <!--masukkan status-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/st_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/al_regis">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_status"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:hint="Status"
            android:inputType="text"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <!--masukkan username-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/st_regis">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/txt_username"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="Username"
        android:inputType="text"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <!--Masukkan password-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/pass_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/user_regis">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/txt_pwdregis"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>
    <!--ulangi password-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/ulang_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pass_regis">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/txt_ulang_pass"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="Ulangi Password"
        android:inputType="textPassword"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_register"
        android:background="@color/colorBlue"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="Daftar"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ulang_regis"/>
    <Button
        android:id="@+id/btn_login"
        android:background="@color/colorBlue"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@id/btn_register"
        app:layout_constraintTop_toBottomOf="@id/ulang_regis" />

</android.support.constraint.ConstraintLayout>